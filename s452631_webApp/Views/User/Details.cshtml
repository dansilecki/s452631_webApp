@model s452631_webApp.users

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>of @Html.DisplayFor(model => model.name)  @Html.DisplayFor(model => model.surname)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @* @Html.DisplayNameFor(model => model.name)*@
            @Html.DisplayName(" Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.surname)*@
            @Html.DisplayName("Surame")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.surname)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.dateOfBirth)*@
            @Html.DisplayName("Date of birth")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateOfBirth, "ShortDateTime")
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.login)*@
            @Html.DisplayName(" Login")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.login)
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Index")" class="btn btn-primary">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        <span class="bold">Back to List</span>
    </a>

    <a href="@Url.Action("Edit", new { id = Url.RequestContext.RouteData.Values["id"] })" class="btn btn-warning">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <span class="bold">Edit</span>
    </a>
</p>
